// manifest.json
{
    "manifest_version": 3,
    "name": "No User",
    "version": "1.0",
    "description": "Automatically replaces user with maker on web pages",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
